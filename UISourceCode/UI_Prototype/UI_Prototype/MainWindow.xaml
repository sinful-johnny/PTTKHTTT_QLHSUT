<Fluent:RibbonWindow x:Class="UI_Prototype.MainWindow"
        xmlns:Fluent="urn:fluent-ribbon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_Prototype"
        mc:Ignorable="d"
        Height="465" Width="800" 
        Loaded="RibbonWindow_Loaded" Closing="RibbonWindow_Closing">
    <DockPanel LastChildFill="True">
        <Fluent:Ribbon DockPanel.Dock="Top" x:Name="ribbon" Height="31">
            <Fluent:Ribbon.Menu>
                <Fluent:Backstage Header="Menu">
                    <Fluent:BackstageTabControl>
                        <Fluent:BackstageTabItem Header="Remember Last Accessed Tab Index">
                            <TextBlock>
                            Status: <Run Text="ON" x:Name="StatusTextRun"/>
                            </TextBlock>
                        </Fluent:BackstageTabItem>
                        <Fluent:BackstageTabItem Header="Log out">
                            <Button Content="Log Out" Click="LogOut_buttonClicked"/>
                        </Fluent:BackstageTabItem>
                    </Fluent:BackstageTabControl>
                </Fluent:Backstage>
            </Fluent:Ribbon.Menu>

            <Fluent:RibbonTabItem Header="Đăng ký thành viên"/>

            <Fluent:RibbonTabItem Header="Đăng ký tuyển dụng"/>
            
        </Fluent:Ribbon>

        <TabControl Name="tabs" BorderThickness="0"
            SelectedIndex="{Binding ElementName=ribbon, Path=SelectedTabIndex}">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

        </TabControl>
    </DockPanel>
</Fluent:RibbonWindow>
